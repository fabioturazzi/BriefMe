extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1= projectData.project_name

        p.lead.text-light
          | Description: #{projectData.description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies:

        ul
          each technology in projectData.technologies
            li=technology

        //-a.button.expanded(target='_blank' href='') Live Demo
        a.button.expanded(target='_blank' href='' + projectData.github) GitHub Repo

    - for (var i = 1; i < projectData.image_urls.length; i++)
      img.image(src='' + projectData.image_urls[i] class='image')